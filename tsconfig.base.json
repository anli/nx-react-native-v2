{
  "compileOnSave": false,
  "compilerOptions": {
    "strictNullChecks": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@nx-react-native/shared/auth": ["libs/shared/auth/src/index.ts"],
      "@nx-react-native/shared/i18n": ["libs/shared/i18n/src/index.ts"],
      "@nx-react-native/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@nx-react-native/shared/utils-apollo-provider": [
        "libs/shared/utils-apollo-provider/src/index.ts"
      ],
      "@nx-react-native/shared/utils-testing": [
        "libs/shared/utils-testing/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
